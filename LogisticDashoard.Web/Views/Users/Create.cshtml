@model LogisticDashboard.Core.Users

@{
    ViewData["Title"] = "Create User";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header highlight-background text-white">
                    <h5 class="mb-0"><i class="fas fa-user-plus"></i> Create New User</h5>
                </div>
                <div class="card-body">
                    <form id="createUserForm">
                        <div class="form-group mb-3">
                            <label for="biphId" class="control-label fw-bold"></label>
                            <input  class="form-control" id="biphId" placeholder="Enter BIPH ID" />
                        </div>

                        <div class="form-group form-check mb-4">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" id="isAdmin" />
                                Is Admin
                            </label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" id="btnSave" class="btn btn-primary btn-lg">
                                <span id="btnText">Create User</span>
                                <span id="btnSpinner" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-muted text-center">
                    <a asp-action="Index" class="text-decoration-none">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="module" src="~/js/page-scripts/Users.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}