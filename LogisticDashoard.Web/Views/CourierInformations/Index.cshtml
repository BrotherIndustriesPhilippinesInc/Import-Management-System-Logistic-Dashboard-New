@model LogisticDashboard.Web.DTO.CourierInformationDHLCombined

<div class="mt-4">
    <div class="misc-color px-3 py-3 d-inline-flex mb-2 rounded align-items-center gap-2">
        <span class="text-light fs-2 fw-bold">Courier Information</span>
    </div>
</div>

<div>
    <a asp-action="Create">Create New</a>
</div>

<div class="container d-flex flex-column justify-content-center align-items-center">
    <table class="w-50" style="border-collapse: separate; border-spacing: 0 8px;">
        <thead>
            <tr>
                <th><h3 class="fw-bold">Courier</h3></th>
                <th></th>
                <th><h3 class="fw-bold">BIPH Account No.</h3></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var courier in Model.DeliveryInformation)
            {
                <tr>
                    <td>
                        <img width="200px" src="@Url.Content(courier.CourierImage)" />
                    </td>
                    <td>
                        <i class="fa-solid fa-arrow-right fs-1 ms-3 me-3"></i>
                    </td>
                    <td>
                        <div class="p-2 text-center" style="border-radius: 8px; border:solid 2px dodgerblue">
                            <span class="fw-bold fs-5">@courier.BIPH_Account_No</span>
                        </div>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@courier.Id">Edit</a>
                        <a asp-action="Delete" asp-route-id="@courier.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-4 text-center">
        <div class="misc-color px-3 py-3 d-inline-flex mb-2 rounded align-items-center gap-2">
            <span class="text-light fs-5 fw-bold">DHL Correct Code</span>
        </div>
        @if (Model.Dhl != null)
        {
            <div class="d-flex align-items-start justify-content-center gap-4 mt-3">
                <div>
                    <img src="@Url.Content(Model.Dhl.ImageLink)" width="800px" class="rounded shadow-sm border" />
                </div>
                <div class="d-flex flex-column gap-2">
                    <a asp-controller="DHLs" asp-action="Edit" asp-route-id="@Model.Dhl.Id" class="btn btn-warning btn-sm">
                        <i class="fa-solid fa-pen-to-square me-1"></i> Edit
                    </a>
                    <a asp-controller="DHLs" asp-action="Delete" asp-route-id="@Model.Dhl.Id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete this DHL record?');">
                        <i class="fa-solid fa-trash me-1"></i> Delete
                    </a>
                </div>
            </div>
        }

    </div>
</div>
