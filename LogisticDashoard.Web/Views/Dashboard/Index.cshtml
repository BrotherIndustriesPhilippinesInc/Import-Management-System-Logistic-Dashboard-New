@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex mt-4 justify-content-between align-items-center">
    <div class="misc-color px-3 py-3 d-inline-block mb-2 rounded">
        <span class="text-light fs-2 fw-bold">Dashboard</span>
    </div>
</div>

<div class="d-flex justify-content-end">
    <div>
        <span class="sub-label d-inline">UPLOAD DATE & TIME:</span>
        <select id="upload-date-time">
            @* <option value="value">text</option> *@
        </select>
    </div>

    <button type="button" class="refresh d-flex align-items-end" id="refresh">
        <iconify-icon icon="material-symbols:refresh" width="32" height="32"></iconify-icon>
        <span class="align-self-center">Refresh</span>
    </button>
</div>

<div class="d-flex gap-2 flex-wrap">
    <div class="dashboard-containers p-3" style="width: 800px;">
        <div class="filters-container" style="display: flex; gap: 40px; margin-bottom: 20px;">

            <div id="vessel-transit-mode-filter" class="filter-group" style="flex: 1;">
                <label class="filter-label" style="cursor: pointer;">Mode Of Shipment ⬇</label>
                <div class="checkboxes" style="max-height: 120px; overflow-y: auto; padding: 5px; border: 1px solid #ccc; border-radius: 6px;">
                    <!-- checkboxes inserted dynamically -->
                </div>
            </div>

            <!-- Origin Filter -->
            <div id="vessel-transit-origin-filter" class="filter-group" style="flex: 1;">
                <label class="filter-label" style="cursor: pointer;">Origin ⬇</label>
                <div class="checkboxes" style="max-height: 120px; overflow-y: auto; padding: 5px; border: 1px solid #ccc; border-radius: 6px;">
                    <!-- checkboxes inserted dynamically -->
                </div>
            </div>

            <!-- Carrier Forwarder Filter -->
            <div id="vessel-transit-carrier-filter" class="filter-group" style="flex: 1;">
                <label class="filter-label" style="cursor: pointer;">Carrier Forwarder ⬇</label>
                <div class="checkboxes" style="max-height: 120px; overflow-y: auto; padding: 5px; border: 1px solid #ccc; border-radius: 6px;">
                    <!-- checkboxes inserted dynamically -->
                </div>
            </div>
        </div>

        <canvas id="vessel_transit_days"></canvas>
    </div>

    <div class="dashboard-containers p-3" style="width: 400px;">
        <div id="otd-trucker-filter" class="filter-group" style="margin-bottom: 15px;">
            <label class="filter-label" style="cursor:pointer;">Trucker ⬇</label>
            <div class="checkboxes" style="
                max-height:120px;
                overflow-y:auto;
                padding:6px;
                border:1px solid #ccc;
                border-radius:6px;
                display:none;
            ">
                <!-- dynamically filled -->
            </div>
        </div>

        
        <canvas id="otd-achievement-rate"></canvas>
    </div>

    <div class="dashboard-containers p-3" style="width: 400px;">
        <div id="otd-trucker-filter2" class="filter-group" style="margin-bottom: 15px;">
            <label class="filter-label" style="cursor:pointer;">Trucker ⬇</label>
            <div class="checkboxes" style="
                max-height:120px;
                overflow-y:auto;
                padding:6px;
                border:1px solid #ccc;
                border-radius:6px;
                display:none;
            ">
                <!-- dynamically filled -->
            </div>
        </div>


        <canvas id="otd-achievement-rate"></canvas>
    </div>

</div>

@section Scripts{
    <script type="module" src="@Url.Content("~/js/page-scripts/Dashboard.js")"></script>
}