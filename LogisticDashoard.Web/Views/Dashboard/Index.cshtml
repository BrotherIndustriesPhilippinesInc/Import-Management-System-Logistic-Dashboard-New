@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex mt-4 justify-content-between align-items-center">
    <div class="misc-color px-3 py-3 d-inline-block mb-2 rounded">
        <span class="text-light fs-2 fw-bold">Dashboard</span>
    </div>
</div>

<div class="d-flex justify-content-end">
    <button type="button" class="refresh d-flex align-items-end" id="refresh">
        <iconify-icon icon="material-symbols:refresh" width="32" height="32"></iconify-icon>
        <span class="align-self-center">Refresh</span>
    </button>
</div>

<div>
    <div class="dashboard-containers" style="width: 800px;"><canvas id="vessel_transit_days"></canvas></div>
</div>

@section Scripts{
    <script>
        $(async function(){
            const data = [
              { year: 2010, count: 10 },
              { year: 2011, count: 20 },
              { year: 2012, count: 15 },
              { year: 2013, count: 25 },
              { year: 2014, count: 22 },
              { year: 2015, count: 30 },
              { year: 2016, count: 28 },
            ];

            new Chart(
                document.getElementById('vessel_transit_days'),
                {
                type: 'bar',
                data: {
                    labels: data.map(row => row.year),
                    datasets: [
                    {
                        label: 'Acquisitions by year',
                        data: data.map(row => row.count)
                    }
                    ]
                }
                }
            );
        });
    </script>
}