@using LogisticDashboard.Web.Views.Components
@using LogisticDashboard.Web.Views.Components.ComponentModels

@{

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Logistic Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LogisticDashboard.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="p-3 sticky-top">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex">
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNav" aria-controls="offcanvasNav" aria-label="Toggle navigation">
                    <img src="~/resources/icons/bars-solid.svg" width="30" height="30" alt="">
                </button>
                <div>
                    <h3>Logistics Dashboard <br /> Shipping Control Section</h3>
                </div>
            </div>
            
            <div>
                <div class="d-flex align-items-center gap-2">
                    <img class="user-icon" src="~/resources/icons/administrator.svg" width="40" height="40">
                    <div class="d-flex flex-column">
                        <span id="userName"></span>
                        <span>
                            <span id="userDepartment"></span> 
                            <span id="userSection"></span>
                        </span>
                    </div>
                    
                </div>
            </div>
        </div>
        
    </header>
    <div class="px-5">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    
    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNav" aria-labelledby="offcanvasNavLabel">
        <div class="offcanvas-header" style="align-items: flex-start">
            <div class="w-100 d-flex justify-content-center">
                <div>
                    <img src="~/resources/logo/Logistic Dashboard Logo.png" width="240" height="160" alt="logo">
                </div>
            </div>
            
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">

            <div class="d-flex flex-column gap-2">
                @await Html.PartialAsync(CustomComponent.Render("NavLinks"), new NavLinkModel { Text = "Import", ASPController = "Home", Icon = "/resources/icons/imports.svg" })
                @await Html.PartialAsync(CustomComponent.Render("NavLinks"), new NavLinkModel { Text = "Dashboard", ASPController = "Dashboard", Icon = "/resources/icons/dashboard.svg" })
                @await Html.PartialAsync(CustomComponent.Render("NavLinks"), new NavLinkModel { Text = "Sea Freight Delivery Info", ASPController = "SeaFreightDeliveryInfo", Icon = "/resources/icons/sea-freight.svg" })
                @await Html.PartialAsync(CustomComponent.Render("NavLinks"), new NavLinkModel { Text = "Air Freight Delivery Info", ASPController = "AirFreightScheduleMonitorings", Icon = "/resources/icons/air-freight.svg" })
                <div class="accordion" id="accordionLogisticInformation">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button btn dark-backround collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                <img class="me-2" src="~/resources/icons/logistic-information.svg" width="24" height="24" style="filter: brightness(0) invert(1);" />
                                Logistic Information
                            </button>
                        </h2>
                        <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionLogisticInformation">
                            <div class="accordion-body p-2 d-flex flex-column gap-2">
                                    <a asp-action="Index" asp-controller="SailingSchedules" class="btn link-btn dropdown-item">Sailing Schedule</a>
                                    <a asp-action="Index" asp-controller="PortUtilizations" class="btn link-btn dropdown-item">Port Utilization</a>
                                    <a asp-action="Index" asp-controller="BerthingStatus" class="btn link-btn dropdown-item">Berthing Status</a>
                                    <a asp-action="Index" asp-controller="DeliveryLeadtimes" class="btn link-btn dropdown-item">Delivery Leadtime</a>
                                    <a asp-action="Index" asp-controller="Incoterms" class="btn link-btn dropdown-item">Incoterms</a>
                                    <a asp-action="Index" asp-controller="ModeOfShipments" class="btn link-btn dropdown-item">Shipment Mode</a>
                                    <a asp-action="Index" asp-controller="VesselRouteMaps" class="btn link-btn dropdown-item">Vessel Route Map</a>
                                    <a asp-action="Index" asp-controller="PHPortMaps" class="btn link-btn dropdown-item">PH Port Maps</a>
                                    <a asp-action="Index" asp-controller="ContainerVisualizations" class="btn link-btn dropdown-item">CNTR. Visualization</a>
                                    <div class="accordion" id="accordionShippingInstruction">
                                        <div class="accordion-item">
                                            <h2 class="accordion-header">
                                                <button class="accordion-button btn dark-backround collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseOne">
                                                        
                                                    <i class="me-2 fa-solid fa-person-chalkboard" style="filter: brightness(0) invert(1);"></i>
                                                    Shipping Instructions
                                                </button>
                                            </h2>
                                            <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionShippingInstruction">
                                                <div class="accordion-body p-2 d-flex flex-column gap-2">
                                                    <a asp-action="Index" asp-controller="CourierInformations" class="btn link-btn dropdown-item">Courier Information</a>
                                                    <a asp-action="Index" asp-controller="ShippingInstructions" class="btn link-btn dropdown-item">Shipping Instructions</a>
                                                    <a asp-action="RequestForms" asp-controller="ShippingInstructions" class="btn link-btn dropdown-item">Request Form</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync(CustomComponent.Render("NavLinks"), new NavLinkModel { Text = "Logistic Cost", ASPController = "LogisticCosts", Icon = "/resources/icons/dollar.svg" })
                <div class="accordion" id="accordionOthers">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button btn dark-backround collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseOne">

                                <i class="me-2 fa-solid fa-ellipsis" style="filter: brightness(0) invert(1);"></i>
                                Others
                            </button>
                        </h2>
                        <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionOthers">
                            <div class="accordion-body p-2 d-flex flex-column gap-2">
                                <a asp-action="Index" asp-controller="PhilippineHolidays" class="btn link-btn dropdown-item">Announcement</a>
                                <a asp-action="Index" asp-controller="ImportPICInformations" class="btn link-btn dropdown-item">Import PIC Shipping Reporting Flow</a>
                            </div>
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync(CustomComponent.Render("NavLinks"), new NavLinkModel { Text = "Administrator", ASPController = "Users", Icon = "/resources/icons/administrator.svg" })
            </div>
        </div>

    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/lib/datatables/datatables.js"></script>
    <link href="~/lib/datatables/datatables.css" rel="stylesheet" />

    <script src="~/js/helpers/config.js"></script>
    <script type="module" src="~/js/helpers/loadUser.js"></script>

    @* SWEET ALERT *@
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @* CHART JS *@
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>

    @* FONT AWESOME *@
    <script src="https://kit.fontawesome.com/b745f328d5.js" crossorigin="anonymous"></script>

    @* ICONIFY *@
    <script src="https://code.iconify.design/iconify-icon/3.0.0/iconify-icon.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
