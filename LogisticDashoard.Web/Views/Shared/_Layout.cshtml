@using LogisticDashboard.Web.Views.Components
@using LogisticDashboard.Web.Views.Components.ComponentModels

@{

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Logistic Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LogisticDashboard.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="p-3">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex">
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNav" aria-controls="offcanvasNav" aria-label="Toggle navigation">
                    <img src="~/resources/icons/bars-solid.svg" width="30" height="30" alt="">
                </button>
                <div>
                    <h3>Logistics Dashboard <br /> Shipping Control Section</h3>
                </div>
            </div>
            
            <div>
                <div class="d-flex align-items-center gap-2">
                    <img class="user-icon" src="~/resources/icons/administrator.svg" width="40" height="40">
                    <div class="d-flex flex-column">
                        <span>User: John Doe</span>
                        <span>Department/Section: PC / SHIP</span>
                    </div>
                    
                </div>
            </div>
        </div>
        
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    
    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNav" aria-labelledby="offcanvasNavLabel">
        <div class="offcanvas-header" style="align-items: flex-start">
            <div class="w-100 d-flex justify-content-center">
                <div>
                    <img src="~/resources/logo/Logistic Dashboard Logo.png" width="240" height="160" alt="logo">
                </div>
            </div>
            
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">

            <div class="d-flex flex-column gap-2">
                @await Html.PartialAsync(CustomComponent.Render("NavLinks"), new NavLinkModel { Text = "Import", ASPController = "Home", Icon = "/resources/icons/imports.svg" })
                @await Html.PartialAsync(CustomComponent.Render("NavLinks"), new NavLinkModel { Text = "Dashboard", ASPController = "Dashboard", Icon = "/resources/icons/dashboard.svg" })
                @await Html.PartialAsync(CustomComponent.Render("NavLinks"), new NavLinkModel { Text = "Sea Freight Delivery Info", ASPController = "SeaFreightDeliveryInfo", Icon = "/resources/icons/sea-freight.svg" })
                @await Html.PartialAsync(CustomComponent.Render("NavLinks"), new NavLinkModel { Text = "Air Freight Delivery Info", ASPController = "AirFreightDeliveryInfo", Icon = "/resources/icons/air-freight.svg" })
                @await Html.PartialAsync(CustomComponent.Render("NavLinks"), new NavLinkModel { Text = "Logistic Information", ASPController = "LogisticInformation", Icon = "/resources/icons/logistic-information.svg" })
                @await Html.PartialAsync(CustomComponent.Render("NavLinks"), new NavLinkModel { Text = "Logistic Cost", ASPController = "LogisticCost", Icon = "/resources/icons/dollar.svg" })
                @await Html.PartialAsync(CustomComponent.Render("NavLinks"), new NavLinkModel { Text = "Others", ASPController = "Others", Icon = "/resources/icons/others.svg" })
                @await Html.PartialAsync(CustomComponent.Render("NavLinks"), new NavLinkModel { Text = "Administrator", ASPController = "Administrator", Icon = "/resources/icons/administrator.svg" })
            </div>
            

        </div>

        <div class="offcanvas-footer">
            <span>Name</span>
        </div>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/lib/datatables/datatables.js"></script>
    <link href="~/lib/datatables/datatables.css" rel="stylesheet" />


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
