@model LogisticDashboard.Core.VesselRouteMap

@{
    ViewData["Title"] = "Delete";
}

<div class="row justify-content-center align-items-center" style="height: 75vh">
    <div class="col-md-6">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-danger text-white fw-bold text-center">
                <i class="fa-solid fa-triangle-exclamation me-2"></i> Confirm Delete
            </div>
            <div class="card-body text-center">
                <h5 class="text-danger fw-bold mb-3">Are you sure you want to delete this vessel?</h5>

                <dl class="row">
                    <dt class="col-sm-4 fw-semibold">Vessel Name</dt>
                    <dd class="col-sm-8">@Model.VesselName</dd>

                    <dt class="col-sm-4 fw-semibold">Ship ID</dt>
                    <dd class="col-sm-8">@Model.ShipId</dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash me-1"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa fa-arrow-left me-1"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
