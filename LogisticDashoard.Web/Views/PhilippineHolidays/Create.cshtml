@model LogisticDashboard.Core.PhilippineHolidays

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PhilippineHolidays</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Holiday" class="control-label"></label>
                <input asp-for="Holiday" class="form-control" />
                <span asp-validation-for="Holiday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Agency_Office" class="control-label">Agency Office</label>
                <input asp-for="Agency_Office" class="form-control" />
                <span asp-validation-for="Agency_Office" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Port" class="control-label"></label>
                <input asp-for="Port" class="form-control" />
                <span asp-validation-for="Port" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="">-- Select Status --</option>
                    <option value="NORMAL">NORMAL</option>
                    <option value="SKELETAL">SKELETAL</option>
                    <option value="NO WORK">NO WORK</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
